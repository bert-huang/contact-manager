<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/scrollview_info"
    style="@style/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactInfoActivty" >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@id/info_display_image"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:scaleType="centerCrop"
	            android:src="@drawable/ic_face"
	            android:contentDescription="@string/disc_display_image" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@id/info_first_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:textSize="30sp"
	                android:ellipsize="marquee"
	                android:singleLine="true"
	                android:text="@string/text_name_given" />
	
	            <TextView
	                android:id="@id/info_middle_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:textSize="18sp"
	                android:ellipsize="marquee"
	                android:singleLine="true"
	                android:text="@string/text_name_middle" />
	
	            <TextView
	                android:id="@id/info_last_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:textSize="22sp" 
	                android:ellipsize="marquee"
	                android:singleLine="true"
	                android:text="@string/text_name_last" />
	
	            <TextView
	                android:id="@id/info_name_suffix"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:textSize="15sp" 
	                android:ellipsize="marquee"
	                android:singleLine="true"
	                android:text="@string/text_name_suffix" />
	
	        </LinearLayout>
	
	    </LinearLayout>
		<View style="@style/style_separator_thick" />
	
		<!-- ===================================================================== -->
		<!-- Phone -->
	    <LinearLayout
	        android:id="@id/layout_phone_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:text="@string/text_phone" />
	        
	        <View
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="40dp"
	            android:layout_marginTop="15dp"
	            android:background="@color/color_dark_grey"
	            tools:ignore="PxUsage" />
	        
	        <ListView
	            android:id="@id/listview_phone_info"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="40dp"
	            tools:ignore="NestedScrolling" >

	        </ListView>

			<View style="@style/style_separator_thick"/>
	    </LinearLayout>

	    <!-- ===================================================================== -->
	    <!-- Email -->
	    <LinearLayout
	        android:id="@id/layout_email_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:text="@string/text_email" />
			
	        <View
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="40dp"
	            android:layout_marginTop="15dp"
	            android:background="@color/color_dark_grey"
	            tools:ignore="PxUsage" />
	        
	        <ListView
	            android:id="@id/listview_email_info"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="40dp"
	            tools:ignore="NestedScrolling" >

	        </ListView>
	        
			<View style="@style/style_separator_thick"/>
	    </LinearLayout>
	    
	    <!-- ===================================================================== -->
	    <!-- Address -->
	    <LinearLayout
	        android:id="@id/layout_address_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:text="@string/text_address" />
	
    	    <View
    	        android:layout_width="fill_parent"
    	        android:layout_height="1px"
    	        android:layout_marginLeft="40dp"
    	        android:layout_marginTop="15dp"
    	        android:background="@color/color_dark_grey"
    	        tools:ignore="PxUsage" />
	        
	        <ListView
	            android:id="@id/listview_address_info"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="40dp"
	            tools:ignore="NestedScrolling" >

	        </ListView>
	        
			<View style="@style/style_separator_thick"/>
	    </LinearLayout>
	    
	    <!-- ===================================================================== -->
	    <!-- Date of Birth -->
	    <LinearLayout
	        android:id="@id/layout_dob_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:text="@string/text_dob" />
	        
	        <View 
	            style="@style/style_separator_thin"
	            android:layout_marginLeft="40dp"/>
	        <TextView
	            android:id="@id/info_dob"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:layout_marginLeft="55dp"
	            android:hint="@string/text_date"
	            android:text="" />
	

			<View style="@style/style_separator_thick"/>
	    </LinearLayout>
	    
	    
	</LinearLayout>
</ScrollView>
